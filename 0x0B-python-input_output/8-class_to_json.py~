#!/usr/bin/python3
"""Python - Input/Output"""


def class_to_json(obj):
    """
    Returns a dictionary description of an object's JSON serialization structure.

    Args:
        obj (object): An instance of a class.

    Returns:
        dict: A dictionary description of the JSON serialization structure.

    """
    result = {}
    for attr, value in obj.__dict__.items():
        if isinstance(value, (list, dict, str, int, bool)):
            result[attr] = value
        elif hasattr(value, "__dict__"):
            result[attr] = class_to_json(value)
    return result
